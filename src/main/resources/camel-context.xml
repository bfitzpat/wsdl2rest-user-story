<!-- Configures the Camel Context-->
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">
    <camelContext id="_camelContext1" xmlns="http://camel.apache.org/schema/spring">
        <route id="_route1">
            <from id="_from1" uri="timer://simpleTimer?period=10000"/>
            <setHeader headerName="cityName"><constant>Colorado Springs</constant></setHeader>
            <setHeader headerName="countryName"><constant>us</constant></setHeader>
            <!-- get application ID from https://home.openweathermap.org/api_keys when you sign up for a free account -->
            <setHeader headerName="appId"><constant>edb0497f39df0cb266c17ecff48dfe30</constant></setHeader>
            <setHeader headerName="weatherUri"><simple>http://api.openweathermap.org/data/2.5/weather?q=${header.cityName},${header.countryName}%26APPID=${header.appId}</simple></setHeader>
            <toD id="_to2" uri="${header.weatherUri}"/>
            <setBody id="_setBody1">
                <simple>Received a weather response: ${body}</simple>
            </setBody>
            <to id="_to1" uri="stream:out"/>
        </route>
    </camelContext>
</beans>